<div>
    <div class="card-group">
        <div class="card opacity-25" >
            <div class="card-body">
                <form action="/images/update/{{product._id}}" method="POST"
                enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="name" value="{{product.name}}"
                        class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input name="description" class="form-control" value="{{product.description}}"
                        placeholder="Description"></input>
                    </div>
                    <div class="form-group">
                        <input type="text" name="proveedor" value="{{product.proveedor}}"
                        class="form-control" placeholder="Proveedor">
                    </div>
                    <div class="form-group">
                        <input type="text" name="sku" value="{{product.sku}}"
                        class="form-control" placeholder="SKU">
                    </div>
                    <div class="form-group">
                        <input type="text" name="price" value="{{product.price}}"
                        class="form-control" placeholder="Price">
                    </div>
                    <div class="form-group">
                        <label for="">Imagen</label>
                        <img src="{{product.imageURL}}" alt="" width="200" height="300">
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image"
                            class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01"
                            class="custom-file-label">Choose Image</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        Upload Photo
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>